{
  "name": "alexmj212.dev",
  "version": "4.0.0",
  "description": "Alex Johnson - Portfolio & Blog",
  "scripts": {
    "build:css": "tailwindcss -i ./tailwind-input.css -o ./_site/assets/css/main.css",
    "build:css:watch": "tailwindcss -i ./tailwind-input.css -o ./_site/assets/css/main.css --watch",
    "build": "bundle exec jekyll build && npm run build:css",
    "serve": "bundle exec jekyll serve --livereload",
    "dev": "bundle exec jekyll serve --livereload & npm run build:css:watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.21"
  }
}
